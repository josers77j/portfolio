---
import removeTrailingSlash from "@/utils/removeTrailingSlash";
import presentation from "@/data/presentation";
import i18next from "i18next";
import { initReactI18next } from 'react-i18next';
import { useState } from 'react';
const pathname = removeTrailingSlash(Astro.url.pathname);

i18next.use(initReactI18next).init({
  resources: {
    en: {
      translation: {
        "home": "Home",
        "contact": "Contact"
      }
    },
    es: {
      translation: {
        "home": "Inicio",
        "contact": "Contacto"
      }
    }
  },
  lng: "en", // Idioma por defecto
  fallbackLng: "en",
  interpolation: {
    escapeValue: false
  }
});

---

<header class="z-40 flex w-full flex-col gap-2 md:flex-row md:justify-between">
  <nav role="navigation">
    <ul role="list" class="flex flex-row gap-2">
      <li>
        <a
          href="/"
          class:list={{
            ["hover:text-neutral-100"]: true,
            ["text-neutral-100"]: pathname === "/",
          }}>{i18next.t('home')}</a
        >
      </li>
      <li>
        <a
          href="/contact"
          class:list={{
            ["hover:text-neutral-100"]: true,
            ["text-neutral-100"]: pathname === "/contact",
          }}>{i18next.t('contact')}</a
        >
      </li>
    </ul>
  </nav>
</header>

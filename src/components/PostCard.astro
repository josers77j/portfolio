---
type Props = {
  name: string;
  image: string;
};

const { name, image } = Astro.props;
---

<a
  class="group flex max-w-sm flex-col gap-2 rounded-md border-neutral-300 p-4 transition-all duration-300 hover:-translate-y-2 hover:border-neutral-400 w-30 h-30 bg-white/10 backdrop-blur-lg"
>
  <div
    class="flex w-full flex-col justify-between gap-2 md:flex-row md:items-center"
  >
    <div class="flex flex-row items-center gap-4">
    </div>
  </div>

  <img
    src={image}
    alt={name}
    class={'w-20 h-20'}
  />

  <p class="text-neutral-300 text-center">{name}</p>

</a>
